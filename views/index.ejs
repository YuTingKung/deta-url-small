<!DOCTYPE html>
<html lang="en" style="background-color: #f9f9f9;">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=0.7">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <title>Small</title>
</head>
<body style="background-color: #f9f9f9;">
    <header style="text-align:center;">
        <div id="logo" style="padding: 40px 20px 25px;"><a href="/" class="logo" style="font: 900 49px asap,arial; color:#0186da; text-shadow: 0 2px 2px #ddd; ">YuTing</a></div>
    </header>
    
    <div class="container">
    <h1 style="font: bold 36px asap,arial; color: #505050; text-align:center;">Paste the URL to be smaller</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">Url</label>
        <input placeholder="Enter the link here" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
        <button class="btn btn-success" type="submit">Smaller</button>
    </form>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th style="width: 100px;">Full URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(shortUrl => { %> 
                <tr>
                    <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                    <td>
                        <button onclick="copyToClipboard(`${window.location.origin}/<%= shortUrl.short %>`)">Copy</button>
                        <a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
                    </td>
                    <td><%= shortUrl.clicks %></td>
                </tr>
            <% }) %>  
        </tbody>
    </table>
</div>

<script>
    function copyToClipboard(url) {
        /* Get the text field */
        //var copyText = document.getElementById("myInput");

        /* Select the text field */
        //copyText.select();
        //copyText.setSelectionRange(0, 99999); /* For mobile devices */

        /* Copy the text inside the text field */
        navigator.clipboard.writeText(url).then(function() {
            alert("Copied: " + url);
        }, function() {
            alert("Copy fail!");
        });
    }
</script>

</body>
</html>