    </header>
    
    <div class="container">
    <h1 style="font: bold 36px asap,arial; color: #505050; text-align:center;">Paste the URL to be smaller</h1>
    <form action="/shortUrls" method="POST" class="my-4 form-inline">
        <label for="fullUrl" class="sr-only">Url</label>
        <input placeholder="Enter the link here" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2">
        <button class="btn btn-success" type="submit">Smaller</button>
    </form>

    <table class="table table-striped table-bordered table-sm">
        <thead>
            <tr>
                <th style="width: 100px;">Full URL</th>
                <th>Short URL</th>
                <th>Clicks</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(shortUrl => { %> 
                <tr>
                    <td><a href="<%= shortUrl.full %>"><%= shortUrl.full %></a></td>
                    <td>
                        <button class="copy btn-success btn-sm" data-clipboard-text="<%= shortUrl.short %>" onclick="copyToClipboard(`${window.location.origin}/<%= shortUrl.short %>`)">Copy</button>
                        <a href="<%= shortUrl.short %>"><%= shortUrl.short %></a>
                    </td>
                    <td><%= shortUrl.clicks %></td>
                </tr>
            <% }) %>  
        </tbody>
    </table>
</div>

